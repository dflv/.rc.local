#!/bin/bash

FILES_TO_INDEX=./files.to.index

rm -f cscope.* tags
if [ -e "./idx.files" ];
then
    cscope -bkq -i$FILES_TO_INDEX &
    ctags -R -L $FILES_TO_INDEX &
    wait
else
    cscope -bkRq &
    ctags -R &
    wait
fi

### for cctree built from ccglue.sourceforge.net
### ccglue -S cscope.out -o cctree.out
