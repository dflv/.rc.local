#!/bin/bash

EXT=~/Lab/external

RAND=`openssl rand -hex 16`

find $EXT -maxdepth 1 > /tmp/prj-list-$RAND

IGNRD=0
while read line
do
    if [ "$IGNRD" == "0" ];
    then
        IGNRD=1
        echo "[IGN] $line"
    else
        pushd $line >& /dev/null
        ls .git >& /dev/null
        if [ "$?" != "0" ];
        then
            echo "[IGN] $line"
        else
            echo "[IDX] $line"
            git pull
            idx
        fi
        popd >& /dev/null
    fi
done < "/tmp/prj-list-$RAND"

rm -f /tmp/prj-list-$RAND
